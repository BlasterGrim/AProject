@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h2>Elenco clienti</h2>

<p>
    <a asp-action="Create">Crea nuovo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Cognome
            </th>
            <th>
                Data di nascita
            </th>
            <th>
                Sesso
            </th>
            <th>
                Numero telefono
            </th>
            <th>
                Tipo spedizione
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dNascita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sesso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contatto.nTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spedizione.nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.ClienteId">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.ClienteId">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
