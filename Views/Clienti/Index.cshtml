@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h2>Elenco clienti</h2>

<!--ricerca campo-->
<form asp-controller="Clienti" asp-action="Index">
    <p>
        Ricerca per nome <input type="text" name="SearchString">
        Ricerca per cognome <input type="text" name="SearchString1">
        Ricerca per data di nascita <input type="text" name="SearchString2">
        Ricerca per sesso <br>
        Maschio <input type="radio" name="SearchString3" value="M">
        Femmina <input type="radio" name="SearchString3" value="F">
        <input type="submit" value="Filtra" />
    </p>
</form>

<p>
    <a asp-action="Create">Crea nuovo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Cognome
            </th>
            <th>
                Data di nascita
            </th>
            <th>
                Sesso
            </th>
            <th>
                Contatti
            </th>
            <th>
                Indirizzo
            </th>
            <th>
                Tipo utente
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dNascita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sesso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contatto.nTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indirizzo.IndirizzoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.TipoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId">Modifica</a>
                <a asp-action="Details" asp-route-id="@item.ClienteId">Dettagli</a>
                <a asp-action="Delete" asp-route-id="@item.ClienteId">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
