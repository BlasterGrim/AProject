@model EFGetStarted.AspNetCore.NewDb.Models.Contatto

@{
    ViewData["Title"] = "Delete";
}

<h2>Elimina</h2>

<h3>Sei sicuro di voler rimuovere questo contatto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Telefono
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nTelefono)
        </dd>
        <dt>
            FAX
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nFax)
        </dd>
        <dt>
            Cellulare
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nCellulare)
        </dd>
        <dt>
            E-mail
        </dt>
        <dd>
            @Html.DisplayFor(model => model.eMail)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-group">
        <input type="hidden" asp-for="ContattoId" />
        <input type="submit" value="Elimina" class="btn btn-default" />
    </form>
</div>
<div>
    <a asp-action="Index">Torna alla lista ></a>
</div>