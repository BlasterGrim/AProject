@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Fattura>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.quantitaProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.iva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sconto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totFattura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.quantitaProdotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totFattura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FatturaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FatturaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FatturaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
