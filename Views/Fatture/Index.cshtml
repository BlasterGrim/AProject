@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Fattura>

@{
    ViewData["Title"] = "Index";
}

<h2>Elenco fatture</h2>

<p>
    <a asp-action="Create">Crea nuova fattura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Quantità prodotto
            </th>
            <th>
                IVA
            </th>
            <th>
                Sconto
            </th>
            <th>
                Importo fattura
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.quantitaProdotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iva) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sconto) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totFattura) €
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FatturaId">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.FatturaId">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.FatturaId">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
