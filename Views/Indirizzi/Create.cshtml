@model EFGetStarted.AspNetCore.NewDb.Models.Indirizzo

@{
    ViewData["Title"] = "Create";
}

<h2>Nuovo</h2>

<h4>Indirizzo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="indirizzoSpedizione" class="control-label">Indirizzo spedizione</label>
                <input asp-for="indirizzoSpedizione" class="form-control" />
                <span asp-validation-for="indirizzoSpedizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="indirizzoFatturazione" class="control-label">Indirizzo fatturazione</label>
                <input asp-for="indirizzoFatturazione" class="form-control" />
                <span asp-validation-for="indirizzoFatturazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Invia" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista ></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
