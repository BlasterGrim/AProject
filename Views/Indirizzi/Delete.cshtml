@model EFGetStarted.AspNetCore.NewDb.Models.Indirizzo

@{
    ViewData["Title"] = "Delete";
}

<h2>Elimina</h2>

<h3>Sei sicuro di voler rimuovere questo indirizzo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Indirizzo spedizione
        </dt>
        <dd>
            @Html.DisplayFor(model => model.indirizzoSpedizione)
        </dd>
        <dt>
            Indirizzo fatturazione
        </dt>
        <dd>
            @Html.DisplayFor(model => model.indirizzoFatturazione)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-group">
        <input type="hidden" asp-for="IndirizzoId" />
        <input type="submit" value="Elimina" class="btn btn-default" />
    </form>
</div>
<div>
    <a asp-action="Index">Torna alla lista ></a>
</div>