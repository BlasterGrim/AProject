@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Tipo>

@{
    ViewData["Title"] = "Index";
}

<h2>Tipo</h2>

<p>
    <a asp-action="Create">Crea nuovo tipo di utente ></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descrizione
            </th>
            <th>
                Partita IVA
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pIVA)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoId">Modifica ></a>
                <a asp-action="Details" asp-route-id="@item.TipoId">Dettagli ></a>
                <a asp-action="Delete" asp-route-id="@item.TipoId">Elimina ></a>
            </td>
        </tr>
}
    </tbody>
</table>
