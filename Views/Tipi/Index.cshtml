@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Tipo>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descrizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pIVA)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descrizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pIVA)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TipoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
